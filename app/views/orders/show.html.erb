<p style="color: green"><%= notice %></p>

<section id="order-container">
  <%= render @order %>

  <div id="order-container__grid">
    <%= render "orders/order_items" %>
    <div id="order-container__summary">
      <h3>Summary</h3>
      <div id="order-container__summary-information">
        <div id="order-container__arrow-down-div">
          <p>Do you have a promo code?</p>
          <%= image_tag "icons/angle-down", alt: "arrow down", class: "order-container-icon" %>
        </div>
        <div id="order-container__hidden-promo">
            <%= form_for @order, url: user_order_path(current_user, @order) do |f| %>
              <div class="field">
                <%= f.text_field :promo_code, value: "" %>
              </div>
          
              <div class="actions">
                <%= f.submit "Apply Code" %>
              </div>
            <% end %>
          </div>
        <p>Subtotal</p>
        <p>Discount</p>
        <p>Cupom</p>
        <hr>
        <p>Total</p>
        <hr>
        <% if @order.status == "Shopping Cart" %>
          <%= form_for @order, url: user_order_path(current_user, @order) do |f| %>
            <div class="field">
              <%= f.hidden_field :status, value: "Purchased" %>
            </div>
            <div class="actions">
              <%= f.submit "CHECKOUT", id: "order-container__checkout-button" %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  
  <%= form_for @order, url: user_order_path(current_user, @order) do |f| %>
      <div class="field">
        <%= f.hidden_field :promo_code, value: "" %>
      </div>
  
      <div class="actions">
        <%= f.submit "Remove Code" %>
      </div>
  <% end %>
  
  <div>
    <%= link_to "Edit this order", edit_user_order_path(current_user, @order) %> |
    <%= button_to "Destroy this order", user_order_path(current_user, @order), method: :delete %>
    <%# verify if adm's gonna be able to destroy or not %>
  </div>
  
  <%= link_to "Promo Codes", promo_codes_path %>

  <h2>You might also like</h2>
  <%= render "home/new-arrivals" %>
</section>