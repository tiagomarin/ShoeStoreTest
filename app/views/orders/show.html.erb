<p style="color: green"><%= notice %></p>

<%= render @order %>

<%= render "orders/order_items" %>

<button>Add Code</button>
<%= form_for @order, url: user_order_path(current_user, @order) do |f| %>
    <div class="field">
      <%= f.hidden_field :promo_code, value: "" %>
    </div>

    <div class="actions">
      <%= f.submit "Remove Code" %>
    </div>
<% end %>

<div style="background-color: WhiteSmoke; padding:20px; border: 1px solid black; margin: 10px 0">
  <%= form_for @order, url: user_order_path(current_user, @order) do |f| %>
      <div class="field">
        <%= f.text_field :promo_code %>
      </div>

      <div class="actions">
        <%= f.submit "Apply Code" %>
      </div>
  <% end %>
</div>





<% if @order.status == "Shopping Cart" %>
  <%= form_for @order, url: user_order_path(current_user, @order) do |f| %>
    <div class="field">
      <%= f.hidden_field :status, value: "Purchased" %>
    </div>

    <div class="actions">
      <%= f.submit "PAY" %>
    </div>
  <% end %>
<% end %>

<div>
  <%= link_to "Edit this order", edit_user_order_path(current_user, @order) %> |
  <%= link_to "Back to orders", user_orders_path %>
  <%= button_to "Destroy this order", user_order_path(current_user, @order), method: :delete %>
  <%# verify if adm's gonna be able to destroy or not %>
</div>



