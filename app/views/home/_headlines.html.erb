<div id="headline-container__product-1">
  <h1 id="headline-container__h1">AIR VITOR</h1>
  <p id="headline-container__p">Step up your game with the new Air Vitor sneakers - where style meets performance!</p>
  <%= form_with(url: products_path, method: :get, data: { controller: "search-form",      turbo_frame: "products", turbo_action: "advance"}) do |form| %>
    <%= form.hidden_field :query, value: "Vitor", data: { action: "input->search-form#search"} %>
    <%= form.submit "Check it out!", class: "headline-container__button" %>
  <% end %>
</div>

