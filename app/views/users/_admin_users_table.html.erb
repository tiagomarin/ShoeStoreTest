<table>
    <thead>
        <th>ID</th>
        <th>IMAGE</th>
        <th>NAME</th>
        <th>ADDRESS</th>
        <th>ROLE</th>
        <th>E-MAIL</th>
        <th>SHOP</th>
    </thead>

    <tbody>
      <% users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td>
            <% if user.avatar.attached? %>
                <%= image_tag user.avatar, class: "admin-users-table__img" %>
            <% else %>
                <%= image_tag "no-image-user.png", class: "admin-users-table__img" %>
            <% end %>
          </td>
          <td><%= user.name %></td>
          <td><%= user.address %></td>
          <td><%= user.role %></td>
          <td><%= user.email %></td>
          <% spent = 0 %>
          <% user.orders.each do |order| %>
            <% spent += order.order_items.sum(:total_price) %>
          <% end %>
          <td><%= number_to_currency(spent) %></td>
        </tr>
      <% end %>
    </tbody>
</table>
