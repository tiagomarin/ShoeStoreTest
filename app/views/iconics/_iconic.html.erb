<div id="iconic-products-container__card">
  <%= render "iconics/form", iconic: iconic %>
  <% if iconic.product.images.length > 1 %>
    <%= link_to product_path(iconic.product), id: "iconic-products-container__link" do %>
      <%= image_tag iconic.product.images[1], id: "iconic-products-container__img", alt: "iconic-product" %>
    <% end %>
  <% else %>
    <%= link_to product_path(iconic.product), id: "iconic-products-container__link" do %>
      <%= image_tag iconic.product.images[0], id: "iconic-products-container__img", alt: "iconic-product" %>
    <% end %>
  <% end %>
  <p id="iconic-products-container__text"><%= iconic.product.name %></p>
</div>
