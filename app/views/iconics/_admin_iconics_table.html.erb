<table>
    <thead>
        <th>ID</th>
        <th>ICONIC</th>
        <th>IMAGE (SQUARE)</th>
        <th>IMAGE (RECTANGLE)</th>
    </thead>

    <tbody>
      <% iconics.each do |iconic| %>
        <tr>
          <td><%= iconic.id %></td>
          <td>
            <div class="set-hide">
              <%= image_tag "icons/edit", class:"admin-products-table__edit-icon set-edit" %>
              <%= iconic.product.name %>
            </div>
            <%= form_with model: Iconic, url: iconic_path(iconic), method: :patch, class: "set-form" do |form| %>
              <%= form.select :iconic, @products.map { |product| [product.name, product.id]}, value: iconic.product.name %>
              <%= form.submit "update", class: "set-submit" %>
            <% end %>
          </td>
          <td>
              <%= form_with model: Iconic, url: iconic_path(iconic), method: :patch, class: "image-form" do |form| %>
                <%= form.label :images, class: "image-label" do %>
                  <% if iconic.product.images[0] %>
                    <%= image_tag iconic.product.images[0], class: "admin-iconics-table__img image-image" %>
                  <% else %>
                    <%= image_tag "no-product-image.png", class: "admin-iconics-table__img image-image" %>
                  <% end %>
                  <%= form.file_field :images, multiple: true, class: "image-select" %>
                <% end %>
                <%= form.submit "✔️", class: "image-submit" %>
              <% end %>
          </td>
          <td>
              <%= form_with model: Iconic, url: iconic_path(iconic), method: :patch, class: "image-form" do |form| %>
                <%= form.label :images, class: "image-label" do %>
                  <% if iconic.product.images[1] %>
                    <%= image_tag iconic.product.images[1], class: "admin-iconics-table__img image-image" %>
                  <% else %>
                    <%= image_tag "no-product-image.png", class: "admin-iconics-table__img image-image" %>
                  <% end %>
                  <%= form.file_field :images, multiple: true, class: "image-select" %>
                <% end %>
                <%= form.submit "✔️", class: "image-submit" %>
              <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
</table>
