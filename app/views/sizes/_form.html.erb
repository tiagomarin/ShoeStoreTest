<%= form_with(model: size) do |form| %>
  <% if size.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(size.errors.count, "error") %> prohibited this size from being saved:</h2>

      <ul>
        <% size.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="new-size-container__form-labels">
    <%= form.label :number, style: "display: block" %>
    <%= form.text_field :number, placeholder: "Type size" %>
  </div>

  <div>
    <%= form.submit "Add size", id: "new-size-container__form-button" %>
  </div>
<% end %>
